<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="15dp"
    tools:context=".MainActivity">

    <!--

        Aqui eu usei minha imaginação
        desenhei no papel como eu queria
        e percebi que podemos colocar outros layouts
        assim fiz varios blocos.

        Qualquer coisa estou disponivel
        para tirar duvidas tire o print da parte
        e me mande para responder!

        ;D

    -->

    <!-- bloco 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        android:background="#ff4747">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="@string/aluno"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/et_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/nome"
            android:textColor="#fff"
            android:textColorHint="#afff"/>

    </LinearLayout>

    <!-- bloco 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp"
        android:layout_marginBottom="5dp"
        android:background="#b73232">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nota"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/et_nota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/primeira"
            android:textColor="#fff"
            android:textColorHint="#afff"/>

        <EditText
            android:id="@+id/et_nota1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/segunda"
            android:textColor="#fff"
            android:textColorHint="#afff"/>
        <EditText
            android:id="@+id/et_nota2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/terceira"
            android:textColor="#fff"
            android:textColorHint="#afff"/>

    </LinearLayout>

    <!-- Botão Visivel -->
    <Button
        android:id="@+id/b_media"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="#000"
        android:text="@string/media" />

    <!-- Botão Invisivel -->
    <Button
        android:id="@+id/b_media1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="#000"
        android:visibility="gone"
        android:text="@string/media" />

    <!-- bloco 3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aluno"
            android:textSize="20sp"
            android:paddingLeft="20dp" />

        <!-- bloco 3.1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="40sp"
                android:paddingLeft="20dp"
                android:layout_marginRight="90dp"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estatus"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- bloco 4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nome1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aluno"
            android:textSize="20sp"
            android:paddingLeft="20dp" />

        <!-- bloco 4.1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nota1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="40sp"
                android:paddingLeft="20dp"
                android:layout_marginRight="90dp"/>

            <TextView
                android:id="@+id/tv_status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estatus"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>